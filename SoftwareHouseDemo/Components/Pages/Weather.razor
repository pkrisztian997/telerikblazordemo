@page "/weather"
@using SoftwareHouseDemo.Controllers
@inject HttpClient Http

<PageTitle>Telerik Blazor App | Weather</PageTitle>

<h1>Weather</h1>

@if (Forecasts == null)
{
    <TelerikLoaderContainer Visible="true" />
}
else
{
    <TelerikGrid Data="@Forecasts"
                 Sortable="true"
                 FilterMode="@GridFilterMode.FilterRow"
                 Pageable="true">
        <GridColumns>
            <GridColumn Field="@nameof(WeatherDto.Date)" DisplayFormat="{0:d}" />
            <GridColumn Field="@nameof(WeatherDto.TemperatureC)" Title="Temp. (C)" />
            <GridColumn Field="@nameof(WeatherDto.TemperatureF)" Title="Temp. (F)" />
            <GridColumn Field="@nameof(WeatherDto.Summary)" />
            @* <GridColumn Field="@nameof(WeatherForecast.Date)" DisplayFormat="{0:d}" />
            <GridColumn Field="@nameof(WeatherForecast.TemperatureC)" Title="Temp. (C)" />
            <GridColumn Field="@nameof(WeatherForecast.TemperatureF)" Title="Temp. (F)" />
            <GridColumn Field="@nameof(WeatherForecast.Summary)" /> *@
        </GridColumns>
    </TelerikGrid>
}

